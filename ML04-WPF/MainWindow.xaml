<Window x:Class="ML04_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ML04_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <Button x:Name="logIn" Content="Log In" HorizontalAlignment="Left" Margin="236,345,0,0" VerticalAlignment="Top" Width="118" Height="40" Click="logIn_Click"/>
        <TextBlock x:Name="passwordLbl" HorizontalAlignment="Left" Margin="236,221,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" Height="28" Width="118" FontSize="20"/>
        <TextBox x:Name="pass" HorizontalAlignment="Left" Height="40" Margin="236,277,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118"/>
        <TextBox x:Name="user" HorizontalAlignment="Left" Height="40" Margin="236,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118"/>
        <TextBlock x:Name="userLbl" HorizontalAlignment="Left" Margin="236,81,0,0" TextWrapping="Wrap" Text="User Name:" VerticalAlignment="Top" Height="28" Width="118" FontSize="20"/>
        <TextBlock x:Name="errorLbl" HorizontalAlignment="Left" Margin="236,430,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="118" FontSize="20"/>

    </Grid>
</Window>
